---
import ParallaxImage from "../utils/ParallaxImage.astro";
import heroTrees2 from "../../assets/images/hero-trees-2.jpg";
---

<section class="mb-section overflow-hidden  drop-shadow-[0_50px_50px_rgba(80,160,255,0.25)]">
  <div class="h-[120px] md:h-[150px] w-[100%] relative rounded-tl-[4rem] rounded-br-[4rem] overflow-hidden" data-aos="zoom-out">
    <ParallaxImage 
      src={heroTrees2}
      alt="Panoramic forest view"
      width="120%"
      height="200%"
      speed={0.3}
    />
    <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
      <h2 class="text-white text-2xl md:text-4xl uppercase tracking-wider font-light" data-aos="fade-up">
        Our planet <span class="font-bold">deserves better</span>
      </h2>
    </div>
  </div>
</section>